{
  "name": "copilot-serial-tool",
  "displayName": "Copilot Serial Tool",
  "description": "VS Code serial monitor extension with GitHub Copilot integration, featuring AI-powered device communication and Python-based serial monitoring",
  "version": "1.3.3",
  "publisher": "Htboss11",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Htboss11/copilot-serial-tool.git"
  },
  "bugs": {
    "url": "https://github.com/Htboss11/copilot-serial-tool/issues"
  },
  "homepage": "https://github.com/Htboss11/copilot-serial-tool#readme",
  "keywords": [
    "serial",
    "monitor",
    "raspberry-pi",
    "pico",
    "mcp",
    "ai-agent",
    "python",
    "iot",
    "embedded",
    "debugging"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "assets/icon.png",
  "categories": [
    "Debuggers",
    "Other"
  ],
  "galleryBanner": {
    "color": "#2d3748",
    "theme": "dark"
  },
  "ai": {
    "tools": {
      "available": true,
      "description": "Provides MCP tools for AI agents to control serial device daemon. Enables automated daemon management, port connection, and data retrieval through Copilot integration.",
      "usage": "Use @copilot-serial-tool to control the daemon. Available tools: serial_start_daemon, serial_stop_daemon, serial_get_status, serial_connect_port, serial_disconnect_port, serial_query_data, serial_get_recent, serial_get_tail."
    }
  },
  "activationEvents": [
    "onLanguageModelTool:copilot-serial-tool",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "copilot-serial-tool.mcp-provider",
        "label": "Copilot Serial Tool MCP Server"
      }
    ],
    "commands": [
      {
        "command": "copilot-serial-tool.open",
        "title": "Open Copilot Serial Tool",
        "category": "Copilot Serial Tool"
      },
      {
        "command": "copilot-serial-tool.showSessions",
        "title": "Show Session Files",
        "category": "Copilot Serial Tool"
      },
      {
        "command": "copilot-serial-tool.sessionInfo",
        "title": "Show Session Information",
        "category": "Copilot Serial Tool"
      },
      {
        "command": "copilot-serial-tool.checkDependencies",
        "title": "Check Dependencies",
        "category": "Copilot Serial Tool"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Copilot Serial Tool",
      "properties": {
        "copilotSerialTool.defaultBaudRate": {
          "type": "number",
          "default": 115200,
          "description": "Default baud rate for serial connections"
        },
        "copilotSerialTool.bufferLines": {
          "type": "number",
          "default": 1000,
          "description": "Number of lines to keep in buffer"
        },
        "copilotSerialTool.autoDetectPico": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect Raspberry Pi Pico devices"
        },
        "copilotSerialTool.backgroundMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Enable passive background monitoring of COM9"
        },
        "copilotSerialTool.sessionTimeout": {
          "type": "number",
          "default": 3600,
          "minimum": 60,
          "maximum": 86400,
          "description": "Passive monitoring timeout in seconds (60-86400)"
        },
        "copilotSerialTool.maxSessionFiles": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum number of session files to keep (1-100)"
        },
        "copilotSerialTool.maxFileSize": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum file size in MB before rotation (1-100)"
        },
        "copilotSerialTool.sessionDirectory": {
          "type": "string",
          "default": "serial-sessions",
          "description": "Directory name for storing session files (relative to workspace)"
        },
        "copilotSerialTool.sessionFlushInterval": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 60,
          "description": "How often to write buffered data to disk in seconds (0 = only at end of session, 1-60 = periodic flush)"
        },
        "copilotSerialTool.watchTimeout": {
          "type": "number",
          "default": 60000,
          "description": "Default timeout for watch operations (ms)"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "copilotSerialTool",
          "name": "Copilot Serial Tool",
          "when": "true",
          "type": "webview",
          "icon": "$(device-mobile)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "copilotSerialTool",
        "contents": "Welcome to Copilot Serial Tool!\n[Open Copilot Serial Tool](command:copilot-serial-tool.open)\n[Check Dependencies](command:copilot-serial-tool.checkDependencies)"
      }
    ],
    "menus": {
      "menubar/tools": [
        {
          "command": "copilot-serial-tool.open",
          "title": "Copilot Serial Tool",
          "group": "1_tools"
        }
      ],
      "commandPalette": [
        {
          "command": "copilot-serial-tool.open",
          "when": "true"
        },
        {
          "command": "copilot-serial-tool.checkDependencies",
          "when": "true"
        },
        {
          "command": "copilot-serial-tool.showSessions",
          "when": "true"
        },
        {
          "command": "copilot-serial-tool.sessionInfo",
          "when": "true"
        }
      ],
      "editor/context": [
        {
          "command": "copilot-serial-tool.open",
          "when": "true",
          "group": "z_commands@1"
        }
      ],
      "explorer/context": [
        {
          "command": "copilot-serial-tool.open",
          "when": "true",
          "group": "z_commands@1"
        },
        {
          "command": "copilot-serial-tool.showSessions",
          "when": "true",
          "group": "z_commands@2"
        }
      ],
      "view/title": [
        {
          "command": "copilot-serial-tool.open",
          "when": "view == explorer",
          "group": "navigation@10"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node build/esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node build/esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project build/tsconfig.json",
    "package": "npm run check-types && npm run lint && node build/esbuild.js --production",
    "compile-tests": "tsc -p build/tsconfig.json --outDir out",
    "watch-tests": "tsc -p build/tsconfig.json -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit --project build/tsconfig.json",
    "lint": "eslint src --config build/eslint.config.mjs",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.13",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
